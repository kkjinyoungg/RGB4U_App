<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/rounded_corner_background"
    android:backgroundTint="@android:color/transparent">>

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="탈퇴하시겠습니까?"
        android:fontFamily="@font/nanumsquareroundbold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="생각모아를 탈퇴하면 기록과 분석 결과 등 모든 정보가 즉시 삭제되고 복구가 불가능합니다. 계속하시겠습니까?"
        android:textSize="16sp"
        android:lineSpacingExtra="8dp"
        android:fontFamily="@font/nanumsquareroundregular"
        android:textColor="@color/gray2"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취소"
            android:textColor="@color/black"
            android:backgroundTint="@color/gray3" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="탈퇴"
            android:backgroundTint="#f1ed68"
            android:textColor="@android:color/black"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

</LinearLayout>
