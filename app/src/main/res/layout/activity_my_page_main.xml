<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- 마이페이지 툴바 -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_base1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

         <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" /><!-- 툴바 아래 남은 공간을 차지하도록 설정 -->
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navigationBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 상단 텍스트 "마이페이지" -->

                <!-- 사용자 정보 섹션 -->
                <LinearLayout
                    android:id="@+id/user_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_character"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/img_ch_mypage"
                            android:layout_gravity="center_horizontal"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <!-- 환영 메시지 -->
                            <TextView
                                android:id="@+id/tv_welcome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="안녕, 오늘도 반가워!"
                                android:fontFamily="@font/own_mongmongday"
                                android:textColor="@color/blue2"
                                android:textSize="18sp" />

                            <!-- 이름, 프로필 수정 -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_nickname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="나서진"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/nanumsquareroundbold" />

                                <!-- 프로필 수정 버튼 -->
                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/btn_edit_profile"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="8dp"
                                    android:background="?attr/selectableItemBackground"
                                    android:contentDescription="프로필 수정"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_pencil" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            <!-- 두 번째 구분선 -->

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="12dp"
                android:background="@color/gray4" />


            <!-- 설정 섹션 -->
            <LinearLayout
                android:id="@+id/settings_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:gravity="start">

                <TextView
                    android:id="@+id/tv_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="설정"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nanumsquareroundbold" />

                <!-- 알림 설정 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_notification_settings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="알림 설정"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumsquareroundregular"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:id="@+id/btn_notification_details"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_next"
                        android:contentDescription="상세보기"
                        android:scaleType="fitCenter"
                        android:background="?attr/selectableItemBackground" />
                </LinearLayout>

                <!-- 비밀번호 설정 (토글 버튼) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_password_settings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="비밀번호 설정"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumsquareroundregular"
                        android:layout_weight="1"/>

                    <Switch
                        android:id="@+id/switch_password"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginRight="16dp"
                        android:track="@drawable/switch_track_selector"
                        android:thumb="@drawable/switch_thumb"/>

                </LinearLayout>

                <!-- 비밀번호 변경 메뉴 (비밀번호 설정이 켜질 때만 표시) -->
                <LinearLayout
                    android:id="@+id/layout_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_change_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="비밀번호 변경"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumsquareroundregular"/>

                    <ImageButton
                        android:id="@+id/btn_change_password"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_next"
                        android:scaleType="fitCenter"
                        android:contentDescription="상세보기"
                        android:background="?attr/selectableItemBackground"
                        android:layout_marginEnd="16dp" />
                </LinearLayout>

                <!-- 도움말 섹션 -->
                <TextView
                    android:id="@+id/tv_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="도움말"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nanumsquareroundbold"
                    android:layout_marginTop="24dp"/>

                <!-- 생각뭉치 사용법 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_how_to_use"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="생각모아 사용법"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumsquareroundregular"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:id="@+id/btn_how_to_use_details"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_next"
                        android:scaleType="fitCenter"
                        android:contentDescription="상세보기"
                        android:background="?attr/selectableItemBackground" />
                </LinearLayout>

                <!-- 서비스 이용약관 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_terms_of_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="서비스 이용약관"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumsquareroundregular"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:id="@+id/btn_terms_of_service_details"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_next"
                        android:scaleType="fitCenter"
                        android:contentDescription="상세보기"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumsquareroundregular"
                        android:background="?attr/selectableItemBackground" />
                </LinearLayout>

                <!-- 계정 섹션 -->
                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="계정"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nanumsquareroundbold"
                    android:layout_marginTop="24dp"/>

                <!-- 로그아웃 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_logout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="로그아웃"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumsquareroundregular"
                        android:layout_weight="1"
                        android:clickable="true" />

                </LinearLayout>

                <!-- 회원탈퇴 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_delete_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="회원탈퇴"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanumsquareroundregular"
                        android:layout_weight="1"
                        android:clickable="true" />

                </LinearLayout>

                <!-- 버전 정보 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_version_info"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text="버전 1.0.0"
                        android:textSize="12sp"
                        android:textColor="@color/gray2"
                        android:fontFamily="@font/nanumsquareroundregular"
                        android:layout_weight="1"
                        android:clickable="true" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <fragment
        android:id="@+id/navigationBar"
        android:name="com.example.rgb4u_app.ui.fragment.NavigationFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
