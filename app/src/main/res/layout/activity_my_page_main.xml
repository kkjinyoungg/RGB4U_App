<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 상단 텍스트 "마이페이지" -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="마이페이지"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 첫 번째 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3" />

        <!-- 캐릭터 이미지, 환영 메시지, 닉네임, 프로필 수정 버튼을 담은 수평 레이아웃 -->
        <LinearLayout
            android:id="@+id/user_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 사용자 정보 섹션 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="start">

                <!-- 캐릭터 이미지 -->
                <ImageView
                    android:id="@+id/img_character"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_character_face" />

                <!-- 텍스트와 프로필 수정 버튼을 수직 및 수평으로 배치 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <!-- 환영 메시지 -->
                    <TextView
                        android:id="@+id/tv_welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="안녕, 오늘도 반가워!"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 사용자 닉네임 -->
                        <TextView
                            android:id="@+id/tv_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나서진"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- 프로필 수정 버튼 -->
                        <ImageButton
                            android:id="@+id/btn_edit_profile"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_pencil"
                            android:contentDescription="프로필 수정"
                            android:background="?attr/selectableItemBackground"
                            android:scaleType="fitCenter" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 두 번째 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#D3D3D3" />
    </LinearLayout>


    <!-- 설정 섹션 왼쪽 정렬 -->
    <LinearLayout
        android:id="@+id/settings_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/top_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 설정 섹션 -->
        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- 알림 설정 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_notification_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="알림 설정"
                android:textSize="14sp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btn_notification_details"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_next"
                android:contentDescription="상세보기"
                android:scaleType="fitCenter"
                android:background="?attr/selectableItemBackground" />
        </LinearLayout>

        <!-- 비밀번호 설정 (토글 버튼) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_password_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="비밀번호 설정"
                android:textSize="14sp"
                android:layout_weight="1"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 비밀번호 변경 메뉴 (비밀번호 설정이 켜질 때만 표시) -->
        <TextView
            android:id="@+id/tv_change_password"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="비밀번호 변경"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <!-- 도움말 섹션 -->
        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도움말"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- 생각뭉치 사용법 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_how_to_use"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="생각뭉치 사용법"
                android:textSize="14sp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btn_how_to_use_details"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_next"
                android:scaleType="fitCenter"
                android:contentDescription="상세보기"
                android:background="?attr/selectableItemBackground" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_terms_of_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="서비스 이용약관"
                android:textSize="14sp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btn_terms_of_service_details"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_next"
                android:scaleType="fitCenter"
                android:contentDescription="상세보기"
                android:background="?attr/selectableItemBackground" />
        </LinearLayout>

        <!-- 계정 섹션 -->
        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- 로그아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- 회원 탈퇴 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_delete_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원 탈퇴"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- 버전 정보 -->
        <TextView
            android:id="@+id/tv_version_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버전 1.0.0"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <!-- 하단 네비게이션 프래그먼트 -->
    <fragment
        android:id="@+id/navigationBar"
        android:name="com.example.rgb4u_app.ui.fragment.NavigationFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
