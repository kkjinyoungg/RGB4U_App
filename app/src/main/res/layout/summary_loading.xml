    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/illustration"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading_moa_02.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lottieAnimationView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-16dp"
        style="@style/CH_ST"
        android:text="적어주신 내용을 요약하고 있어요"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/main" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        style="@style/Cp1_Regular"
        android:text="5초 정도만 기다려주세요"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue2_30" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_below="@id/illustration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading_circle_02.json"
        app:lottie_loop="true" />
</RelativeLayout>
