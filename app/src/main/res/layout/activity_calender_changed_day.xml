<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_password_edit">

    <include
        layout="@layout/toolbar_write_diary"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ScrollView 추가 -->
    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 생각 요약 박스 -->
            <LinearLayout
                android:id="@+id/ChangethoughtLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/rounded_corner_background"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/ThoughtChangeLayout_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <!-- "이렇게 바꿔봤어요" 텍스트뷰 -->
                        <TextView
                            android:id="@+id/tv_change_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquareroundbold"
                            android:text="이렇게 바꿔봤어요"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_gravity="start" />

                        <!-- thoughtDetailButton 버튼 (오른쪽 끝에 배치) -->
                        <ImageButton
                            android:id="@+id/thoughtDetailButton"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_next"
                            android:layout_gravity="end" />
                    </LinearLayout>

                    <!-- RecyclerView 추가 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/summaryThinkRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>

            <ImageButton
                android:id="@+id/thoughtDownButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_space_between"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thoughtLayout" />

            <!-- 감정 요약 박스 -->
            <LinearLayout
                android:id="@+id/emotionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/rounded_corner_background"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/thoughtDownButton">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/nanumsquareroundbold"
                    android:text="그래서 감정이 이렇게 달라졌어요"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/nanumsquareroundbold"
                    android:lineSpacingExtra="4dp"
                    android:text="감정 정도"
                    android:textColor="@color/gray2"
                    android:textSize="12sp" />

                <!-- 첫 번째 감정 변화 아이콘 및 텍스트 묶음 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- 감정 변화 아이콘 및 텍스트 1 -->
                    <ImageView
                        android:id="@+id/emotionIcon1"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/img_emotion_0" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/emotionStep1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4단계"
                            android:textColor="@color/gray2" />

                        <TextView
                            android:id="@+id/emotionText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아주 싫었어"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 섹션 구분을 위한 화살표 이미지 -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_arrow_down" />


                <!-- 두 번째 감정 변화 아이콘 및 텍스트 묶음 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- 감정 변화 아이콘 및 텍스트 2 -->
                    <ImageView
                        android:id="@+id/emotionIcon2"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/img_emotion_1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/emotionStep2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4단계"
                            android:textColor="@color/gray2" />

                        <TextView
                            android:id="@+id/emotionText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="아주 좋았어"
                            android:textColor="@color/blue2" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 감정 레이블 텍스트뷰들 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/nanumsquareroundbold"
                    android:text="선택한 감정"
                    android:textColor="@color/gray2"
                    android:textSize="12sp" />

                <!-- ChipGroup -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/CalenderChangedSelectedChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:chipSpacing="8dp"
                    app:closeIconEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emotionTypeTextView"
                    app:singleLine="true" />

                <TextView
                    android:id="@+id/emotionTypeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/nanumsquareroundbold"
                    android:text="내가 적은 감정"
                    android:textColor="@color/gray2"
                    android:textSize="12sp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/CalenderChangedEmotionChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    app:chipBackgroundColor="@android:color/transparent"
                    app:chipSpacing="8dp"
                    app:chipStrokeColor="@color/gray1"
                    app:chipStrokeWidth="2dp"
                    app:closeIconEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/emotionTypeTextView"
                    app:singleLine="false" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>