<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.TemporarySaveDialogFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_background"
        android:outlineProvider="none"
        android:gravity="center"
        android:elevation="0dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="기록을 \n그만두시겠어요?"
            style="@style/ST_Bold"
            android:textColor="@color/black"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="기록 중인 내용을 임시 저장하거나 \n삭제할 수 있어요."
            style="@style/Bd2_Regular"
            android:textColor="@color/gray2"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnTemporarySave"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:text="임시 저장"
            style="@style/Bd2_Bold"
            android:backgroundTint="@color/main"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:text="삭제"
            android:backgroundTint="@color/main_secondary"
            style="@style/Bd2_Bold"
            android:textColor="@color/highlight"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:text="취소"
            style="@style/Bd2_Bold"
            android:backgroundTint="@color/main_secondary"
            android:textColor="@color/black" />
    </LinearLayout>


</FrameLayout>