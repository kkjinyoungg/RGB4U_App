<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/help_bottom_sheet_background">

    <!-- 제목 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="하루 기록을 완료했어요"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        style="@style/Bd1_ExtraBold"/>

    <!-- 이미지 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_marginTop="8dp"
        android:src="@drawable/img_diary_complete" />

    <!-- 설명 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="이제 생각 속에 부정적인 생각 행성이 있는지 살펴볼게요\n분석 결과는 한 시간 후에 알려드려요!"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        style="@style/Bd2_Regular" />

    <!-- 확인 버튼 -->
    <android.widget.Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="확인"
        android:background="@drawable/rounded_button"
        android:stateListAnimator="@null"
        android:textColor="@color/black"
        style="@style/Bd2_Bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />
</LinearLayout>
