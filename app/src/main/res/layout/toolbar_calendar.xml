
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_record"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white_0" >

    <ImageButton
        android:id="@+id/button_calendar_action1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back_wh"
        android:contentDescription="동작 버튼"
        android:layout_gravity="start"
        android:layout_marginStart="100dp"
        android:background="@android:color/transparent"/>
    <TextView
        android:id="@+id/toolbar_calendar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/nanumsquareroundregular"
        android:layout_gravity="center" />
    <ImageButton
        android:id="@+id/button_calendar_action2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_exit"
        android:contentDescription="동작 버튼"
        android:layout_gravity="end"
        android:layout_marginEnd="100dp"
        android:background="@android:color/transparent"/>
</androidx.appcompat.widget.Toolbar>