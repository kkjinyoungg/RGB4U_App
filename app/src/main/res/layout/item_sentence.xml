<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- 여기에 박스를 추가 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_transparent_background"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:orientation="vertical">

        <!-- 텍스트뷰들 -->
        <TextView
            android:id="@+id/tv_my_thought_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="흑백성이 발견된 생각"
            android:textColor="@color/blue2_30"
            android:fontFamily="@font/nanumsquareroundbold"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"
            android:gravity="start" />

        <TextView
            android:id="@+id/tv_my_thoughts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="여기에 사용자가 적은 생각을 입력할 수 있습니다."
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquareroundregular"
            android:gravity="start"
            android:layout_marginBottom="12dp"/>

        <!-- 첫 번째 점선 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/dotted_line"
            android:layout_marginVertical="8dp" />

        <!-- 이유 제목과 텍스트 -->
        <TextView
            android:id="@+id/tv_reason_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="왜 흑백성일까요?"
            android:textColor="@color/blue2_30"
            android:fontFamily="@font/nanumsquareroundbold"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:gravity="start"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="흑백성은 모든 일을 두 가지로만 나눠서 생각하게 해요. 네가 시험 결과가 좋으면 학교에 계속 다니고, 시험 결과가 나쁘면 자퇴하겠다고 생각하는 건 모든 일을 두 가지로만 나눠서 생각하는 흑백성 때문일 수 있어."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="4dp"
            android:fontFamily="@font/nanumsquareroundregular"
            android:gravity="start"
            android:layout_marginBottom="12dp" />

        <!-- 두 번째 점선 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/dotted_line"
            android:layout_marginVertical="8dp" />

        <!-- 제안 제목과 텍스트 -->
        <TextView
            android:id="@+id/tv_suggestion_title"
            android:layout_width="149dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nanumsquareroundbold"
            android:gravity="start"
            android:text="이렇게 생각해보면 어떨까요?"
            android:textColor="@color/blue2_30"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_short_suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="‘한 번의 시험으로 모든 것이 결정되진 않아’"
            android:textSize="18sp"
            android:fontFamily="@font/own_mongmongday"
            android:textColor="@color/main"
            android:layout_marginBottom="4dp"
            android:gravity="start" />

        <TextView
            android:id="@+id/tv_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="한 번의 시험으로 모든 것이 끝나지 않는다고 생각해보면 어떨까? 시험은 한 번만 있는 것이 아니니까, 이번 시험 결과가 나쁘더라도 다음에 노력할 수 있을거야."
            android:textSize="14sp"
            android:fontFamily="@font/nanumsquareroundregular"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/black"
            android:gravity="start" />
    </LinearLayout>
</LinearLayout>
