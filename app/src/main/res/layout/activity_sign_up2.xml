<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:scaleType="fitCenter"
            android:contentDescription="@string/back_button"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="회원 가입"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray_200"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"/> <!-- 진한 회색 -->

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"/> <!-- 진한 회색으로 수정 -->
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="생일이 언제야?"
        android:textSize="24sp" /> <!-- 크기 변경 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="생일에 뭉치가 축하해 줄게!"
        android:textSize="16sp" /> <!-- 크기 변경 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:paddingTop="30dp">

        <EditText
            android:id="@+id/birthdayInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="YYYY년 MM월 DD일"
            android:focusable="false"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/calendarIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_calendar"
            android:contentDescription="@string/calendar_icon"
            android:layout_marginStart="8dp"/>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <android.widget.Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다 했어!"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"/>
</LinearLayout>
