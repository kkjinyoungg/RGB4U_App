<resources>
    <!-- BottomAppBar 기본 스타일 -->
    <style name="BottomAppBarCustom" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:background">@color/white</item>
        <item name="cornerRadius">16dp</item> <!-- 원하는 모서리 반경을 설정 -->
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item> <!-- 배경을 흐리게 하지 않음 -->
    </style>

    <style name="CustomNumberPicker">
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nanumsquareroundbold</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nanumsquareroundregular</item>
    </style>

    <style name="selectedchipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/nanumsquareroundregular</item>
    </style>

    <!-- 폰트 스타일 -->
    <style name="Bd2_Bold">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nanumsquareroundbold</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
</resources>
