            <solid android:color="#D3D3D3" /> <!-- 비활성 상태 색상 (연회색) -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6F6F6F" /> <!-- 활성 상태 색상 (진한 회색) -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
