<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray4_dark" /> <!-- 비활성 상태 색상 (연회색) -->
            <corners android:radius="50dp" /> <!-- 둥근 모서리 -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/main" /> <!-- 활성 상태 색상 (진한 회색) -->
            <corners android:radius="50dp" /> <!-- 둥근 모서리 -->
        </shape>
    </item>
</selector>
