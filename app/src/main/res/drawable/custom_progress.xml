<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- SeekBar 배경 -->
    <item>
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="#D3D3D3" />
            <size android:height="28dp" /> <!-- 비선택 부분의 색상 -->
        </shape>
    </item>
    <!-- SeekBar 선택된 부분 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <solid android:color="#A4B6D8" />
                <size android:height="28dp"/><!-- 선택된 부분의 색상 -->
            </shape>
        </clip>
    </item>
</layer-list>
