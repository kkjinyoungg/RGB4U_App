<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- SeekBar 배경 -->
    <item>
        <shape>
            <corners android:radius="50dp" />
            <solid android:color="@color/white_20" />
            <size android:height="30dp" /> <!-- 비선택 부분의 색상 -->
        </shape>
    </item>

    <!-- SeekBar 선택된 부분 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="50dp" />
                <solid android:color="@color/blue2_30" />
                <size android:height="30dp"/><!-- 선택된 부분의 색상 -->
            </shape>
        </clip>
    </item>
</layer-list>
