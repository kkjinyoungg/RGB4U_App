<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background rounded rectangle -->
    <item>
        <shape>
            <solid android:color="@color/white"/> <!-- 배경 색상 -->
            <corners
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/> <!-- 둥근 모서리 -->
            <padding android:left="8dp" android:right="8dp" android:bottom="8dp"/> <!-- 안쪽 패딩 -->
        </shape>
    </item>

    <!-- Small rectangle on top -->
    <item
        android:gravity="center_horizontal|top"
        android:top="16dp">
        <shape>
            <solid android:color="@color/gray3"/> <!-- 작은 네모 색상 -->
            <size
                android:width="32dp"
                android:height="4dp"/> <!-- 작은 네모 크기 -->
            <corners android:radius="2dp"/> <!-- 작은 네모 모서리 -->
        </shape>0
    </item>
</layer-list>
